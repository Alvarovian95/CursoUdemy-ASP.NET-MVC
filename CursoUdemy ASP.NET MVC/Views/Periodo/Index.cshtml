
@{
    ViewBag.Title = "Index";
}


<h2>Periodo</h2>
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />

<label>Ingrese nombre periodo : </label>
<input type="text" id="txtnombre" />
<!-- Trigger the modal with a button -->
<button type="button" onclick="abrirModal(0)" class="btn btn-info" data-toggle="modal" data-target="#myModal">Agregar</button>


<div id="tabla">

</div>

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin: auto">
                    <tr>
                        <td width="40%">Id Periodo</td>
                        <td width="60%"><input type="text" class="borrar" id="txtIdPeriodo" readonly /></td>
                    </tr>
                    <tr>
                        <td>Ingrese nombre Periodo</td>
                        <td><input type="text" class="borrar obligatorio" id="txtNombrePopUp" /></td>
                    </tr>

                    @*Con jquery*@
                    <tr>
                        <td>Fecha de inicio</td>
                        <td><input type="text" class="form-control borrar obligatorio" id="datepickerInicio" placeholder="" value="" required></td>
                    </tr>
                    <tr>
                        <td>Fecha fin</td>
                        <td><input type="text" class="form-control borrar obligatorio" id="datepickerFin" placeholder="" value="" required></td>
                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Agregar()" id="btnAceptar" data-dismiss="modal">Aceptar</button>
                <button type="button" class="btn btn-danger" id="btnCancelar" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>


<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Periodo.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
